<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/ava_size"
            android:layout_height="@dimen/ava_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/avatar"
            android:maxHeight="@android:dimen/notification_large_icon_height"
            android:maxWidth="@android:dimen/notification_large_icon_width" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dip"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/forks_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/title"
            android:layout_margin="4dip"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/forks" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forks_num"
            android:layout_margin="4dip"
            android:layout_toEndOf="@+id/imageView"
            android:text="@string/description" />

    </RelativeLayout>

</android.support.v7.widget.CardView>